<div id="request-invite" class="modal" style="display: <%= @user.errors.any? ? 'block' : 'none';%>">
  <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) , :html => {:class => 'form-horizontal' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3>Register for Launch</h3>
    </div>
    <div class="modal-body">
      <%= f.error_notification %>
      <%= f.input :email, :placeholder => 'user@example.com' %>
    </div>
    <div class="modal-footer">
      <%= f.submit "Register", :class => "btn btn-success", :id => 'invitation_button' %>
      <a class="btn" data-dismiss="modal" href="#">Close</a>
    </div>
  <% end %>
</div>
<div id="romance-copy" style="text-align: center; margin-top: 20px;">
	<a href="http://www.facebook.com/events/147282322111193/" class='brand'><img src="<%= asset_path 'anthem_300.png' %>" style="display: inline;"></a>
</div>
<div id="call-to-action" style="text-align: center; margin-top: 40px; margin-bottom: 20px;">
  <a class="btn btn-success btn-large" data-toggle="modal" href="#request-invite">Request invite</a>
</div>
